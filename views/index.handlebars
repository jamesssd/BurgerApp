<h1>Burgers!</h1>

<h2>Burgers to eat</h2>

<ul>
  {{#each burgers}}
    {{#unless devouredit}}
      <li>
          <span class = 'id'<{{id}}></span>
          <span class = 'burger-name'<{{burger_name}}></span>
          <button class = 'eat-button' data-id='{{id}}'>Devour It!</button></span>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devouredit}}
      <li>
          <span class = 'id'<{{id}}></span>
          <span class = 'burger-name'<{{burger_name}}></span>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devourit">Hungry?</label><br>
    <input type="radio" name="devourit" value="1" checked> Hungry!<br>
    <input type="radio" name="devourit" value="0"> Awake
  </div>

  <button type="submit">Add a Burger</button>
</form>
